<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#807474"
    android:orientation="vertical"
    tools:context=".StorageActivity">

    <EditText
        android:id="@+id/input_data"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:ems="10"
        android:hint="Input Sebuah Data"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/input_data"
        >

        <Button
            android:id="@+id/save_internal"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Simpan ke Internal"
            android:background="@drawable/bulet" />

        <Button
            android:id="@+id/save_external"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Simpan ke Eksternal"
            android:background="@drawable/bulet" />
    </LinearLayout>


</RelativeLayout>